@model IEnumerable<LibraryManagement.ViewModels.BookViewModel>

<h2>Books List</h2>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Author</th>
            <th>Library Branch</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model) // ✅ 变量 `book` 在这里定义
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Genre</td>
                <td>@book.AuthorName</td> <!-- 直接使用 ViewModel -->
                <td>@book.BranchName</td> <!-- 直接使用 ViewModel -->
                <td>
                    <a href="/Book/Details/@book.BookId">View</a> |
                    <a href="/Book/Edit/@book.BookId">Edit</a> |
                    <a href="/Book/Delete/@book.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Book/Create">Add New Book</a>


