@using Microsoft.AspNetCore.Identity
@using LibraryManagement.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    //显示当前登录邮箱
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item" id="user-email">
        <span class="nav-link text-white">Hello, @user.Email!</span>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
            <button type="submit" class="btn btn-link nav-link text-white border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>

