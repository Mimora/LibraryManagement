@model LibraryManagement.ViewModels.BookViewModel

<h2>Are you sure you want to delete this book?</h2>

<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Genre:</strong> @Model.Genre</p>
<p><strong>Author:</strong> @Model.AuthorName</p> 
<p><strong>Library Branch:</strong> @Model.BranchName</p>  

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookId" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a href="/Book/Index">Back to List</a>


